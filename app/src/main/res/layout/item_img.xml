<?xml version="1.0" encoding="utf-8"?>
<com.fancenxing.fanchen.essayjoke.pickImage.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fancenxing.fanchen.essayjoke.pickImage.SquareImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        tools:src="@mipmap/take_photo" />

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />
</com.fancenxing.fanchen.essayjoke.pickImage.SquareFrameLayout>